.login
  top 40%
  position relative
  border-radius 6px
  box-shadow content-shadow
  background-color #fff
  margin -75px auto 0 
  width 300px
  padding 8px
  span.error
    color #f00
  form
    margin 8px 0 0
    input[type=text], input[type=password]
      border-radius 3px
      box-shadow: 0 1px 0 #fff, 0 -2px 5px rgba(0,0,0,0.08) inset
      background #eae7e7
      border 1px solid #c8c8c8
      color #777
      margin 0 0 10px
      padding 10px
      width 278px
      
      &:hover
        border 1px solid #ffc200
        box-shadow 0 0 2px #ffc200 inset
      &:focus
        background-color #fff
        border 1px solid #ffc200
        box-shadow 0 0 2px #ffc200 inset
        outline none

    input[type=submit]
      big-button()
      float right

    &:after
      content ''
      display block
      clear both