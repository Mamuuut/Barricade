border-radius(n)
  -webkit-border-radius n
  -moz-border-radius n
  -ms-border-radius n
  -o-border-radius n
  border-radius n

box-shadow()
  -webkit-box-shadow arguments
  -moz-box-shadow arguments
  -ms-box-shadow arguments
  -o-box-shadow arguments
  box-shadow arguments

container(width)
  border 1px solid #000
  border-radius 3px
  box-shadow: 0 4px 16px #000
  background-color #fff
  margin 8px auto 
  width width
  padding 8px
  
body
  background-color: #3d3d3d
  font 12px Arial
  
h1
  font-size 16px  
  margin 0

.header
  h1
    color #fff
  position relative
  container 600px
  background-color #000
  a
    position absolute
    top 0
    right 0
    margin 10px
    color #fff
  
.index
  container 600px
  min-height 300px

.chat
  #message
    padding 5px
    #new_message
      padding 4px
      margin -7px -5px
      width 100%    
      border 1px solid #acacac
      border-radius 0
  #conversation
    height 200px
    overflow-y auto
    overflow-x hidden
    border solid 1px #acacac
    border-top-width 0
    padding 8px

.login
  container 300px
  span.error
    color #f00
  form
    margin 8px 0 0
    input[type=text], input[type=password]
      border-radius 3px
      box-shadow: 0 1px 0 #fff, 0 -2px 5px rgba(0,0,0,0.08) inset
      background #eae7e7
      border 1px solid #c8c8c8
      color #777
      margin 0 0 10px
      padding 10px
      width 278px
      
      &:hover
        border 1px solid #ffc200
        box-shadow 0 0 2px #ffc200 inset
      &:focus
        background-color #fff
        border 1px solid #ffc200
        box-shadow 0 0 2px #ffc200 inset
        outline none

    input[type=submit]
      margin 0
      color: #fff
      border-radius 3px
      background-color #3d3d3d
      border 1px solid #555
      padding 4px 10px
      float right
      &:hover
        cursor pointer
        background-color #eae7e7
        border 1px solid #eae7e7
        color #555
      
    div.cb
      clear both